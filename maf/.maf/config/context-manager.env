# Context manager service configuration
MAF_TMUX_SESSION=maf-cli
MAF_AGENT_WINDOW=agents

# Base agent commands (for initial session startup)
MAF_SUPERVISOR_CMD="claude --settings /root/projects/roundtable/.claude"
MAF_REVIEWER_CMD="claude --settings /root/projects/roundtable/.claude"
MAF_IMPLEMENTOR_CMD="claude --settings /root/projects/roundtable/.claude"

# Restart commands (for context-manager triggered agent restarts)
# Used when agents need to be respawned while preserving state via Memlayer
MAF_SUPERVISOR_RESTART_CMD="claude --settings /root/projects/roundtable/.claude"
MAF_REVIEWER_RESTART_CMD="claude --settings /root/projects/roundtable/.claude"
MAF_IMPLEMENTOR_1_RESTART_CMD="claude --settings /root/projects/roundtable/.claude"
MAF_IMPLEMENTOR_2_RESTART_CMD="claude --settings /root/projects/roundtable/.claude"

# Context monitoring settings
MAF_CONTEXT_THRESHOLD=40
MAF_REASONING_LEVEL_CHOICE=3
MAF_CONTEXT_MAX_TOKENS=160000
MAF_CONTEXT_TOKENS_PER_LINE=30
