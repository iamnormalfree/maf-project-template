TELEGRAM_BOT_TOKEN=your_token_here
MAF_TMUX_SESSION=maf-cli
ACTIVITY_WINDOW_SEC=120

# Optional: default Claude implementors to run `/response-awareness` on new assignments.
# MAF_IMPLEMENTOR_DEFAULT_RESPONSE_AWARENESS=true

# Optional: autopilot (periodically runs the equivalent of `/broadcast-targeted auto idle`)
# MAF_AUTOPILOT_ENABLED=false
# MAF_AUTOPILOT_INTERVAL_MS=120000
# MAF_AUTOPILOT_COOLDOWN_SEC=900

# Optional: mail-aware idle behavior for tmux nudges
# MAF_IDLE_MAIL_POLICY=ignore  # ignore|skip|wake

# Optional: review workflow automation
# MAF_REVIEW_REQUEST_ROUTER_ENABLED=true
# MAF_REVIEW_REQUEST_ROUTER_INTERVAL_MS=30000
# MAF_REVIEW_AUTO_CLOSE_ENABLED=false

# Optional: autopilot unblock (use with care)
# MAF_AUTOPILOT_UNBLOCK_ENABLED=false
# MAF_AUTOPILOT_UNBLOCK_INTERVAL_MS=15000
# MAF_AUTOPILOT_UNBLOCK_SUBMIT=true
# MAF_AUTOPILOT_UNBLOCK_CONFIRM_MCP_AGENT_MAIL=true
# MAF_AUTOPILOT_UNBLOCK_TRUST_MCP_AGENT_MAIL=false
# MAF_AUTOPILOT_UNBLOCK_TRUST_RESPONSE_AWARENESS=true
